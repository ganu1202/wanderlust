<%layout("layouts/boilerplate.ejs")%>
<body>
    <div class="row mt-3 mb-3">
      <div class="col-8 offset-2">
        <!-- <br><br> -->
        <h3>Create a new listing</h3>
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3" >
                <label for="title" >Title</label>
                <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Add a catchy title" required>
                <div class="valid-feedback">Title Looks Good</div>
            </div>
                
                <!-- <br><br> -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                name="listing[description]" 
                id="description"
                class="form-control" 
                required
                ></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>
                <!-- <br><br> -->
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" name="listing[image]" id="image" class="form-control" placeholder="Enter Image URL/Link">
            </div> -->
            
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control" required>
            </div>
                <!-- <br><br> -->

            <div class="row">

                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="listing[price]" placeholder="1200" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
                    <!-- <br><br> -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" name="listing[country]" placeholder="India" required>
                    <div class="invalid-feedback">Please enter country name</div>
                </div>
            </div>
                <!-- <br><br> -->
            <div class="mb-3">
                <label for="Location" class="form-label">Location</label>
                <input type="text" id="Location" class="form-control" name="listing[location]" placeholder="Bengaluru" required>
                <div class="invalid-feedback">Please enter a Location</div>
            </div>


            <button class="btn btn-dark add mt-3">Add</button>
            <!-- <br><br> -->
        </form>
      </div>  
    </div>
</body>
